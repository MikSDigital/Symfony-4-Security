{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}    

    {{ form_start(form) }}

        <div>
            <div>{{ form_label(form.username) }}</div>
            <div>{{ form_widget(form.username) }}</div>
            <div><label style="color:red;">{{ form_errors(form.username) }}</label></div>  
        </div>
        <div>
            <div>{{ form_label(form.password.first) }}</div>
            <div>{{ form_widget(form.password.first) }}</div>
            <div><label style="color:red;">{{ form_errors(form.password.first) }}</label></div>  
        </div>
        <div>
            <div>{{ form_label(form.password.second) }}</div>
            <div>{{ form_widget(form.password.second) }}</div>
            <div><label style="color:red;">{{ form_errors(form.password.second) }}</label></div>  
        </div>
        <div>
            <div>{{ form_label(form.email) }}</div>
            <div>{{ form_widget(form.email) }}</div>
            <div><label style="color:red;">{{ form_errors(form.email) }}</label></div>  
        </div>
        <div>
            <div>{{ form_label(form.roles) }}</div>
            <div>{{ form_widget(form.roles) }}</div>
            <div><label style="color:red;">{{ form_errors(form.roles) }}</label></div>  
        </div>

    {{ form_end(form) }}

{% endblock %}